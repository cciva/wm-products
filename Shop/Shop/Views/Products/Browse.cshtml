@model IEnumerable<Shop.Library.Model.Product>

<h2>All prodcuts</h2>


<script type="text/javascript">
    $(document).ready(function () {
        $(".delete-product").bind("click", function (event) {
            event.preventDefault();

            var url = '@Url.Action("TestDelete", "Products")';
            var productId = $(this).attr("product-id");
            var elem = $(this);

            if (!confirm('Delete this record?')) {
                return;
            }

            $.post(url, { id: productId })
                .done(function (response) {
                    if (response.Success) {
                        elem.closest('tr').remove();
                    } else {
                        alert("error while trying to delete record");
                    }
                }).fail(function (response) {
                    alert("error while trying to delete record");
                });
        });
    });
</script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Make)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Make)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supplier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            <button class="btn btn-xs pull-right btn-danger delete-product" product-id="@item.Id">
                <span class="glyphicon glyphicon-trash"></span>
            </button>
        </td>
    </tr>
}

</table>

